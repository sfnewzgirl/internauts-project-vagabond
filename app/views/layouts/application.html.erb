<!DOCTYPE html>
<html>
  <head>
    <title>VagabondApp</title>
    <%= csrf_meta_tags %>

    <link href="https://fonts.googleapis.com/css?family=Henny+Penny|Irish+Grover|Short+Stack" rel="stylesheet">

    <script src='https://api.mapbox.com/mapbox.js/v2.4.0/mapbox.js'></script>
    <link href='https://api.mapbox.com/mapbox.js/v2.4.0/mapbox.css' rel='stylesheet' />

    <style>
      body { margin:0; padding:0; }
      .map { position:absolute; top:20%; bottom:0; width:100%; }
    </style>


    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <h1>Vagabond</h1>
      <p>
        "Not all who wander are lost" - J.R.R. Tolkein
      </p>
      <nav>
        <%= link_to root_path do %>
          <div class="button"><%= image_tag("Home.png", border: 0) %></div>
        <% end %>

        <% if current_user %>
          <%= link_to user_path(current_user), class: "rm_line" do %>
            <div class="button user_nav">User Profile</div>
          <% end %>

          <%= link_to logout_path, class: "rm_line" do %>
            <div class="button log_nav">Log Out</div>
          <% end %>

        <% else %>
          <%= link_to new_user_path, class: "rm_line" do %>
            <div class="button user_nav">Create User</div>
          <% end %>

          <%= link_to login_path, class: "rm_line" do %>
            <div class="button log_nav">Log In</div>
          <% end %>
        <% end %>
      </nav>
    </header>

    <%= yield %>
  </body>
</html>
